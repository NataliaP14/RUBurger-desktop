<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" stylesheets="@main.css" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project4ruburger.controller.PlacedOrderController">

    <top>
        <HBox spacing="10.0" style="-fx-background-color: #333;">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-title" text="RU Burger">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Text>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id = "cart" text="Cart" onAction="#goToCart" />
            <Button fx:id = "orders" text="My Orders" onAction="#goToOrders"/>

        </HBox>
    </top>


    <center>
        <VBox spacing="20" >
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <Button fx:id = "back" text="Main Menu" onAction="#backToMainMenu" />

            <!-- Order Management UI Buttons-->
            <HBox spacing="10">
                <Label text="Select an Order:"/>
                <ComboBox fx:id="orderDropdown" />
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="totalAmount" text="Total: $0.00"/>
            </HBox>

            <Label text="Order Details:"/>
            <TextArea fx:id="orderDetails" editable="false"/>



            <HBox spacing="10">
                <Button fx:id="cancelOrder" text="Cancel Order" />
                <Button fx:id="exportOrder" text="Export Orders" />
            </HBox>

        </VBox>

        <!-- hi-->

    </center>

    <bottom>

    </bottom>

</BorderPane>